@model Musictify.Models.Song

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Song</h1>

@*<h4>Song</h4>*@
<hr />
@using (Html.BeginForm("Edit","Song",FormMethod.Post,new {enctype="multipart/form-data"}))
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SongId" />
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReleased" class="control-label"></label>
                <input asp-for="DateReleased" class="form-control" />
                <span asp-validation-for="DateReleased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtWork" class="control-label"></label>
                 <input type="file" name="ImageFile" asp-for="ArtWork" class="form-control" />
                <span asp-validation-for="ArtWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artists" class="control-label"></label>
                <input asp-for="Artists" class="form-control" />
                <span asp-validation-for="Artists" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

<div>
