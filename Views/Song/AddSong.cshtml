@model Musictify.Models.Song

@{
    ViewData["Title"] = "AddSong";
}

<h1>Add Song</h1>


<hr />
@using (Html.BeginForm("AddSong","Song",FormMethod.Post,new {enctype="multipart/form-data"}))
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSong">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>
             <br/>
            <div class="form-group">
                <label asp-for="DateReleased" class="control-label"></label>
                <input asp-for="DateReleased" class="form-control" />
                <span asp-validation-for="DateReleased" class="text-danger"></span>
            </div>
             <br/>
            <div class="form-group">
                <label asp-for="ArtWork" class="control-label"></label>
                <input type="file" name="ImageFile" asp-for="ArtWork" class="form-control" />
                <span asp-validation-for="ArtWork" class="text-danger"></span>
            </div>
             <br/>
            <div class="input-group">
                
                <label  asp-for="Artists"  class="control-label"></label> &nbsp; &nbsp;
                
                <td> @Html.DropDownList("Artists",(IEnumerable<SelectListItem>)ViewData["Artists"]) &nbsp;&nbsp;</td>
                <span asp-validation-for="Artists" class="text-danger"></span>
                 <span class="input-group-btn">
                  <a asp-controller="Artists" asp-action="AddArtist" class=" btn btn-primary">+ Add Artist</a>
                </span>
            </div>
             <br/>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Add Song" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

