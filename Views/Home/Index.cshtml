@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using Musictify.Models;
@model ViewModel;
@{
    ViewData["Title"] = "Home Page";
}
@{
    string user;
    if(Context.Session.GetString("UserName")!=null)
    {
        user = Context.Session.GetString("UserName");
    }
    else
    {
        user = string.Empty;
    }
}


<div class="text-center">
    <h1 class="display-6">Welcome @user</h1>
    <h1 class="display-6">To The Heaven of Music</h1>
    
</div>
<br/>
 

<h1 class="display-6">Top 10 Songs </h1>
    <table class="table">
        <thead>
        <tr>
            <th>Art Work</th>
            <th>Song</th>
            <th>Date of Release</th>
            <th>Artist</th>
        </tr>
        </thead>
        @foreach (Song item in Model.songList)
        {
            <tbody>
            <tr>
                <td><img src="~/Images/@item.ArtWork" width=100 height=100></td>
                <td>@item.SongName</td>
                <td>@item.DateReleased</td>
                <td>@item.Artists</td>
            </tr>
            </tbody>
        }
    </table>
    <br/>
    <h1 class="display-6">Top 10 Artists </h1>
    <table class="table">
        <thead>
        <tr>
            <th>Artists</th>
            <th>Date of Birth</th>
            <th>Bio</th>
            
        </tr>
        </thead>
        @foreach (Artist item in Model.artistList)
        {
            <tbody>
            <tr>
                <td>@item.ArtistName</td>
                <td>@item.DateofBirth</td>
                <td>@item.Bio</td>
               
            </tr>
            </tbody>
        }
    </table>